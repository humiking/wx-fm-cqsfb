<view class="index">
    <!--轮播图  -->
    
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="text index swiper" id="swiper">
        <block wx:for="{{imgUrls}}">
            <swiper-item class="swiper-item">
                <image src="{{item}}" class="slide-image" width="33%" />
            </swiper-item>
        </block>
    </swiper>
    <!--歌曲列表  -->
    <view class="container_scroll_view" style='margin-top:{{banner_height}}px;' >
    <scroll-view class="scroll_view" scroll-top="false" >
        
        <view hidden='{{hidden_loading}}' class='loading_icon'>正在刷新...</view>
        <block wx:for="{{list_sf}}" wx:for-index="idx" wx:for-item="item">
            <view class="playlist">
                <view class="widgets__item" bindtap='playThisMusic' data-id='{{item.id}}'>
                        <view id="{{item.id}}" class="widgets__info">
                            <image class="widgets__info-img music_cover" src="{{item.poster}}" mode="aspectFill" />
                            <text class="widgets__info-name">{{item.name}}</text>
                            <text class="widgets__info-artistor">{{item.artistorName}}</text>
                        </view>
                </view>
            </view>
        </block>
        <view class="blank_area">
          <view wx:if="{{hasMore}}" class='loading_icon'>加载更多...</view>
          <view wx:if="{{!hasMore}}" class='loading_icon'>————————已经是底线了————————</view> 
        </view>
    </scroll-view>
    </view>    
    <!--播放按钮-->
    <view class="playerBox">
        <view class="playerAction">
            <progress id='active' percent="{{activePercent}}" active stroke-width='3' active-mode="forwards" />
            <view id="{{currentPlayInfo.id}}" class="widgets__info">
                <image class="widgets__info-img music_cover" src="{{currentPlayInfo.poster}}" mode="aspectFill" />
                <text class="widgets__info-name">{{currentPlayInfo.name}}</text>
                <text class="widgets__info-artistor">{{currentPlayInfo.artistorName}}</text>
                <!-- <text class="widgets__info-info">{{item.trackCount}}首，播放{{item.playCount}}次</text> -->
            </view>
            <image class="play-btn-start" id="btn-start" mode="aspectFit" src="{{playImage}}" bindtap="isplay"></image>
            <image class="play-btn-allScreen" mode="" src="http://poster-fm-gurui.oss-cn-shanghai.aliyuncs.com/icon-fm/allscreen.png" bindtap="changeAllScreen"></image>
        </view>
    </view>
</view>